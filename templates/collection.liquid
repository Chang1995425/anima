<script>
$(document).ready(function(){
  function resizeForm(){
    var width = (window.innerWidth > 0) ? window.innerWidth : document.documentElement.clientWidth;
    if(width < 800) {
      $('#CollectionSection .grid-uniform .grid__item').eq(0).find('.grid-product__wrapper .grid-product__image-wrapper').attr('data-aos','');
      $('#CollectionSection .grid-uniform .grid__item').eq(0).find('img').css('opacity','1');
      $('#CollectionSection .grid-uniform .grid__item').eq(1).find('.grid-product__wrapper .grid-product__image-wrapper').attr('data-aos','');
      $('#CollectionSection .grid-uniform .grid__item').eq(1).find('img').css('opacity','1');
    }
  }
  window.onresize = resizeForm;
  resizeForm();

});
</script>