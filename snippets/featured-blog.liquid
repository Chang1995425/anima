{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<!-- snippets/featured-blog.liquid -->
{% if section.settings.blog_show_author or section.settings.blog_show_date %}
  <div class="featured-blog__meta">
    {% if section.settings.blog_show_author %}
      <span class="featured-blog__author">
        {{ article.author }}
      </span>
    {% endif %}
    {% if section.settings.blog_show_date %}
      <div class="featured-blog__date">
        <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" class="date">{{ article.published_at | date: format: 'month_day_year' }}</time>
      </div>
    {% endif %}
    <hr class="hr--small {% if section.settings.post_limit == 1 and section.settings.blog_show_image == false %}hr--middle{% else %}hr--left{% endif %}">
  </div>
{% endif %}
<h2 class="h3{% if section.settings.post_limit == 1 and section.settings.blog_show_image == false %} title--one-post{% endif %}">
  <a class="article__heading-link" href="{{ article.url }}">{% comment %}ly_code_replace_for_[ article.title ]_begin{% endcomment %}{% include 'ly-title' with article %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a>
</h2>
{% if section.settings.blog_show_excerpt %}
  <div class="rte rte--indented-images">
    {% comment %}ly_code_replace_for_[ article.excerpt_or_content | strip_html | truncatewords: 30 ]_begin{% endcomment %}{% include 'ly-excerpt_or_content' with article %}{{ ly_translation | strip_html | truncatewords: 30 }}{% comment %}ly_code_replace_end{% endcomment %}
  </div>
{% endif %}
<p>
  <a href="{{ article.url }}" class="text-link">{% comment %}ly_i18n_replace_for_[ 'blogs.article.read_more' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.article.read_more' | t }}{% endcapture %}{% include 'ly-static-string' with '8850684' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %} <span class="icon icon-arrow-right" aria-hidden="true"></span></a>
</p>