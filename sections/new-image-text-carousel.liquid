<div class="row">
  <div class="mobile-block-text" style="width:50%;display:inline-block;padding:40px;padding-bottom:0;text-align:center;{% if section.settings.align_text == 'left' %}float:left;{% else %} float:right; {% endif %}">
    <div class="title-section">
        <h2 class="mobil-titl">{{ section.settings.title }}</h2>
    </div>
    
    <div class="image-wrap-new desktop-block" style="width:100%;padding-left:11%;display:inline-block;padding:0px 15px;text-align:center;{% if section.settings.align_text == 'right' %}float:left;{% endif %}">
      <div class="why-try-one">
      <div class="wrapper container">     
        <div class="dog-carous">      
           <div class="owl-carousel owl-carouselaa owl-theme">       
           <div class="item"> <span><img style="width:310px;height:310px" src="{{section.settings.image  | img_url: 'large'}}" alt="{{section.settings.image}}" /></span></div>
           <div class="item"> <span><img style="width:310px;height:310px" src="{{section.settings.image1  | img_url: 'large'}}" alt="{{section.settings.image}}" /></span></div>
           <div class="item"><span><img style="width:310px;height:310px" src="{{section.settings.image2  | img_url: 'large'}}" alt="{{section.settings.image}}" /></span></div>
         </div>
        </div>
        </div>
      </div>    
    </div>
    
    
    <div class="text-desc" style="margin-top:10%;">
    	
      	<div class="title-section" style="margin-bottom:50px;">
        	<h2 class="mobil-titl2" style="font-weight: 700;">{{ section.settings.title }}</h2>
    	</div>
      
      <p>{{section.settings.text_desc}}<p>
    
    </div>
    <div class="button-new {% if section.settings.btn_colr == 'Blue' %}button btn-grad-log{% endif %}{% if section.settings.btn_colr == 'Red' %}button btn-grad-sign{% endif %}">{{section.settings.button_label}}</div>
  </div>
  
  <div class="image-wrap-new mobile-block" style="width:50%;padding-left:11%;display:inline-block;padding:25px 0px 10px 0px;text-align:center;{% if section.settings.align_text == 'right' %}float:left;padding-top:15px;{% endif %}">
    <div class="why-try-one">
    <div class="wrapper container">     
      <div class="dog-carous">      
         <div class="owl-carousel owl-carouselaa owl-theme">       
         <div class="item"> <span><img style="width:310px;height:310px" src="{{section.settings.image  | img_url: 'large'}}" alt="{{section.settings.image}}" /></span></div>
         <div class="item"> <span><img style="width:310px;height:310px" src="{{section.settings.image1  | img_url: 'large'}}" alt="{{section.settings.image}}" /></span></div>
         <div class="item"><span><img style="width:310px;height:310px" src="{{section.settings.image2  | img_url: 'large'}}" alt="{{section.settings.image}}" /></span></div>
       </div>
      </div>
      </div>
    </div>    
  </div>
</div>
<style>
  .button-new{width:50%;margin-left:20%;margin-right:20%;}
  .mobil-titl{font-weight:700;}
