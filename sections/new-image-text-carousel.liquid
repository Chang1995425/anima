  .slick-new.slick-initialized.slick-slider{padding:25px; }*/
</style>
<script>
$(document).ready(function(){
 $('.slick-new').not('.slick-initialized').slick({
  nextArrow: '<i class="fa fa-chevron-right fa-3x"></i>',
  prevArrow: '<i class="fa fa-chevron-left fa-3x"></i>', 
  infinite: true,
  slidesToShow: 1,
  slidesToScroll: 1
});
});
  
 $('.owl-carouselaa').owlCarousel({
    loop:true, 
    margin:0,
    nav:true,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:1
        },
        1000:{
            items:1
        }
    }
});
</script>
{% schema %}
  {
    "name": "New Image CarouselText",
    "settings": [
     {
        "type": "checkbox",
        "id": "new_img_carousel",
        "label": "New image carousel with text left"
     },
{
        "type": "text",
        "id": "title",
        "label": "Title"
     },
{
   "type": "select",
