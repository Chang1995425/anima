   ],
   "label": "Button Color"
},
{
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image1",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image2",
        "label": "Image"
      },
      {
        "type": "html",
        "id": "text_desc",
        "label": "Text Description"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
   ],
   "presets": [
      {
        "name": "New image carousel with text left",
        "category": "Image"
      }
    ]
  }

{% endschema %}
